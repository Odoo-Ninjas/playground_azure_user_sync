<odoo>
    <data noupdate='0'>

        <record id="view_zbs_connection_odoo_form" model="ir.ui.view">
            <field name="name">zbs.connection.odoo form</field>
            <field name="model">zbs.connection.odoo</field>
            <field name="arch" type="xml">
                <form string="">
                    <header></header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" colspan="4" class="oe_inline" />
                            </h1>
                        </div>
                        <group string="" col="2">
                            <field name="host" />
                            <field name="port" />
                            <field name="ssl"/>
                            <field name="timeout"/>
                            <field name="dbname"/>
                            <field name="username"/>
                            <field name="password" type="password"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_zbs_connection_odoo_tree" model="ir.ui.view">
            <field name="model">zbs.connection.odoo</field>
            <field name="arch" type="xml">
                <tree default_order="" string="">
                    <field name="host"/>
                    <field name="port"/>
                    <field name="username"/>

                </tree>
            </field>
        </record>

    </data>
</odoo>
