<odoo>
    <data noupdate='0'>

        <record id="view_zbs_file_dumper_form" model="ir.ui.view">
            <field name="name">zbs.dumper.file form</field>
            <field name="model">zbs.dumper.file</field>
            <field name="arch" type="xml">
                <form string="">
                    <header></header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" colspan="4" class="oe_inline" />
                            </h1>
                        </div>
                        <group string="" col="2">
                            <field name="content_path"/>
                            <details>
                                <summary>Available variables/examples</summary>
                                <ul>
                                    <li>- record.content</li>
                                </ul>
                            </details>
                            <field name="filepath" />
                            <details>
                                <summary>Available variables/examples</summary>
                                <ul>
                                    <li>- /path/path2/{record.filename}</li>
                                </ul>
                            </details>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
