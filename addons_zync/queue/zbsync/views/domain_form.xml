<odoo>
    <data noupdate='0'>

        <record id="view_zbs_domain_form" model="ir.ui.view">
            <field name="name">zbs.domain form</field>
            <field name="model">zbs.domain</field>
            <field name="arch" type="xml">
                <form string="">
                    <header></header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" colspan="4" class="oe_inline" />
                            </h1>
                        </div>
                        <group string="" col="4">
                            <field name="usage" />
                        </group>
                        <group string="Domain">
                            <field name="domain" nolabel="1"/>
                        </group>
                        <group>
                            <details>
                                <summary>Available Variables</summary>
                                <ul>
                                    <li>data</li>
                                    <li>record</li>
                                </ul>
                            </details>
                        </group>
                    </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

    </data>
</odoo>
