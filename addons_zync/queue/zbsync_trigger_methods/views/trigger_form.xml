<odoo>
    <data noupdate='0'>
        <record id="view_zbs_trigger_form" model="ir.ui.view">
            <field name="model">zbs.trigger</field>
            <field name="inherit_id" ref="zbsync.trigger_form"/>
            <field name="arch" type="xml">
                <sheet position="inside">
                    <group string="Method Triggers">
                        <field name="method_trigger_ids">
                            <tree editable="bottom">
                                <field name="domain"/>
                                <field name="method"/>
                                <field name="model_id"/>
                                <field name="link_expression"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </field>
        </record>
    </data>
</odoo>
